#!/usr/bin/env bash
# Install script for MX-Linux
echo Installing Mutt...
sudo apt install mutt
echo Installing ncurses...
sudo apt install libncurses5-dev
echo Building...
gcc smutt.c -o bin/smutt -lncurses
gcc genconf/genconf.c -o bin/smutt.genconf -lncurses -I./genconf
echo Installing...
echo export PATH = \$PATH:`pwd`/bin >> $HOME/.bashrc
echo Finishing...
source $HOME/.bashrc
echo Done!
